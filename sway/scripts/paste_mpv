#!/bin/bash

# get clipboard content
CLIP=$(wl-paste)

# Check if clipboard is empty
if [ -z "$CLIP" ]; then
    echo "ï®   MPV ï…¸ âŒ Empty Clipboard!"
    notify-send -t 3000 "ï®   MPV - âŒ Empty Clipboard!" 
    exit 1
fi

# check if link is valid
if [[ "$CLIP" =~ ^https?:// ]]; then
    echo "ğŸ” Trying to open: $CLIP"
    notify-send -t 10000 "ï®   MPV - Starting url  ï‘Œ..." &
    mpv "$CLIP"
else
    echo "ï®   MPV ï…¸ âŒ This is not a valid url!"
    notify-send -t 3000 "ï®   MPV ï…¸ âŒ This is not a valid url!" 
fi

