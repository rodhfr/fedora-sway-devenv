    "custom/media": {
        "format": "Û∞û±  {icon} {text}",
        "return-type": "json",
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl next",
        "max-length": 60,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null", // Script in resources folder
        "all-outputs": true
    },
    "custom/bluetooth_selector": {
        "on-click": "$HOME/.config/sway/bluetooth/connect/QCY_H3_Lite",
        "on-click-right": "$HOME/.config/sway/bluetooth/disconnect/qcyh3lite",
        "format": "QCY_H3"
    },
    "custom/play-pause": {
    "exec": "$HOME/.config/waybar/modules/compiled_modules/media_widgets/play-pause",
    "escape": true,
    "return-type": "json",
    "on-click": "playerctl play-pause",
    "tooltip-format": "Toggle Playing"
    },
    "custom/next": {
        "exec": "$HOME/.config/waybar/modules/compiled_modules/media_widgets/next_button",
        "escape": true,
        "return-type": "json",
        "on-click": "playerctl next",
        "tooltip-format": "Next"
    },
    "custom/previous": {
        "exec": "$HOME/.config/waybar/modules/compiled_modules/media_widgets/previous_button",
        "escape": true,
        "return-type": "json",
        "on-click": "playerctl previous",
        "tooltip-format": "Previous"
    },
    "custom/power": {
        "format" : "‚èª ",
